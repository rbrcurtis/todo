<% if @event.to? and @action.user.id is @event.to.id: %>
[<a href="<%=@format.projectLink(@event.project)%>"><%=@event.project.name%></a>] <em><%=@format.truncatePlaintext(@event.story.text)%></em> (<a href="<%=@format.storyLink(@event.project, @event.story)%>"><%- @event.story.ref %></a>) was claimed by <strong><%=@action.user.name%></strong>
<% else: %>
[<a href="<%=@format.projectLink(@event.project)%>"><%=@event.project.name%></a>] <em><%=@format.truncatePlaintext(@event.story.text)%></em> (<a href="<%=@format.storyLink(@event.project, @event.story)%>"><%- @event.story.ref %></a>) was reassigned from <strong><%=if not @event.from? then 'no one' else @event.from.name%></strong> to <strong><%=if not @event.to? then 'no one' else @event.to.name%></strong> by <strong><%=@action.user.name%></strong>
<% end %>